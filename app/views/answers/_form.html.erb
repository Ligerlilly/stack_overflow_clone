<%= form_for @answer do |f| %>
  <div class='form-group'>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.label :response %>
    <%= f.text_field :response, class: "form-control", required: 'required' %>
    <% if params[:controller] == 'questions' && params[:action] == 'show' %>
      <%= f.hidden_field :question_id, value: params[:id] %>
    <% else %>
      <%= f.hidden_field :question_id, value: params[:question_id] %>
    <% end %>
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
