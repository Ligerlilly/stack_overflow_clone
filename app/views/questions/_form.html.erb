

<%= form_for @question do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", required: 'required' %>
  </div>

  <div class='form-group'>
    <%= f.label :content %>
    <%= f.text_area :content, cols: 20, rows: 20, class: "form-control", required: 'required' %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <b>Tags</b><br>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |c| %>
      <%= c.label { c.check_box } %>
      <span class="cb-tags"><%= c.object.name %></span>
    <% end %>
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
